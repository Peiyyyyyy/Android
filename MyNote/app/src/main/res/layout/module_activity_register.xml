<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_register_introduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="bottom|center"
        android:textSize="30sp"
        android:text="欢迎注册FNote"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#ff6424"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_login_account"/>

        <EditText
            android:id="@+id/et_register_inputUsername"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="请输入用户名"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/img_account"
            android:textSize="16dp"
            android:maxLines="1"
            android:background="@null"
            android:inputType="text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_account"
            android:background="#ff6424"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_login_password"/>

        <EditText
            android:id="@+id/et_register_inputPassword"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/img_password"
            android:textSize="16dp"
            android:maxLines="1"
            android:background="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_password"
            android:background="#ff6424"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <ImageView
            android:id="@+id/img_pw_again"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pw_again"/>

        <EditText
            android:id="@+id/et_register_inputPasswordagain"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/img_pw_again"
            android:textSize="16dp"
            android:maxLines="1"
            android:background="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/img_pw_again"
            android:background="#ff6424"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_register_register"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#eda587"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/btn_register_return"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#eda587"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>