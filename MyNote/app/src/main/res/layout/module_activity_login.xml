<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="bottom|center"
        android:textSize="30sp"
        android:text="欢迎使用FNote"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="#ff6424"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

            <ImageView
                android:id="@+id/img_account"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_login_account"/>

            <EditText
                android:id="@+id/et_inputUsername"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="请输入用户名"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/img_account"
                android:textSize="16dp"
                android:maxLines="1"
                android:background="@null"
                android:inputType="text" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_account"
                android:background="#ff6424"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <ImageView
                android:id="@+id/img_password"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_login_password"/>

            <EditText
                android:id="@+id/et_inputPassword"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/img_password"
                android:textSize="16dp"
                android:maxLines="1"
                android:background="@null" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_password"
                android:background="#ff6424"/>

        </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_option"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">
        <CheckBox
            android:id="@+id/btn_save_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:text="记住密码"
            android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_login"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#eda587"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15dp"/>
        <Button
            android:id="@+id/btn_register"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#eda587"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>